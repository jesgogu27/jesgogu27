@model CrudNet8MVC.Models.Contacto

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white"><strong>Crear Usuario</strong></h3>
            </div>

            <div class="card-body">
                <form asp-action="Editar">

                   <input type="hidden" asp-for="Id" />

                   <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                   <div class="form-group">
                       <label asp-for="Name" class="control-label"></label>
                       <input asp-for="Name" class="form-control" placeholder="Ingrese Nombre"/>
                       <span asp-validation-for="Name" class="text-danger"></span>
                   </div>

                   <div class="form-group">
                       <label asp-for="phone" class="control-label"></label>
                       <input asp-for="phone" class="form-control" placeholder="Ingrese Telefono"/>
                       <span asp-validator-for="phone" class="text-danger"></span>
                   </div>
                   
                   <div class="form-group">
                       <label asp-for="celular" class="control-label"></label>
                       <input asp-for="celular" class="form-control" placeholder="Ingrese Celular"/>
                       <span asp-validation-for="celular" class="text-danger"></span>
                   </div>

                   <div class="for-group">
                       <label asp-for="email" class="control-label"></label>
                       <input asp-for="email" class="form-control" placeholder="Ingrese Email"/>
                       <span asp-validation-for="email" class="text-danger"></span>
                   </div>

                   <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary d-block mx-auto"><i class="fa-solid fa-pen-to-square"></i>Editar Cliente</button>
                   </div>
                
                </form>

                <a asp-action="Index" asp-controller="Inicio">Volver</a>

            </div>

        </div>

    </div>

</div>
