@model IEnumerable<CrudNet8MVC.Models.Contacto> //Accedemos al modelo

@{
    ViewData["Title"] = "Lista de Contactos";//Titulo de la pagina 
}

<h1 class="text-center"> Contacto con .Net8 </h1>
<div class= "row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Inicio" class="btn btn-secondary d-block mx-auto btn-lg">       
            <i class="fa-solid fa-plus"></i>  Nuevo Usuario
        </a>
    </div>    
</div>


<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">
                    <strong> Lista de Usuarios</strong>
                </h3>
            </div>
       

            <div class="card-body">
                <div class="table-responsive">
                    @if(Model.Count()>0){
                        <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                                    <th>@Html.DisplayNameFor(m => m.phone)</th>
                                    <th>@Html.DisplayNameFor(m => m.celular)</th>
                                    <th>@Html.DisplayNameFor(m => m.email)</th>
                                    <th>@Html.DisplayNameFor(m => m.FechaCreacion)</th>
                                    <th> Acciones </th>
                                 </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model){
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Name)</td>
                                        <td>@Html.DisplayFor(m => item.phone)</td>
                                        <td>@Html.DisplayFor(m => item.celular)</td>
                                        <td>@Html.DisplayFor(m => item.email)</td>
                                        <td>@Html.DisplayFor(m => item.FechaCreacion)</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.Id"><i class="fa-solid fa-user-pen"></i>Editar</a>
                                            <a class="btn btn-secondary" asp-action="Detalle" asp-route-id="@item.Id"> <i class="fa-solid fa-circle-info"></i>Detalle</a>
                                            <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.Id"><i class="fa-solid fa-eraser"></i>Borrar</a>
                                        </td>
                                        
                                    </tr>
                                }
                            </tbody>
                        </table>                        
                    }
                    else
                    {
                            <p>No Hay Registros</p>
                    }                   

                </div>
            </div>
        </div>
    </div>
</div>
