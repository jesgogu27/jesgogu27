@model IEnumerable<Productos.Cliente.Models.UsuarioViewModel>


@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center"> Contacto con .Net8 </h1>
<div class="row">
    <div class="offset-9 col-3 mb-3">
        <a asp-action="Crear" asp-controller="Usuario" class="btn btn-secondary d-block mx-auto btn-lg">
            <i class="fa-solid fa-plus"></i>  Nuevo Usuario
        </a>
    </div>
</div>


<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">
                    <strong> Lista de Usuarios</strong>
                </h3>
            </div>


            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tblUsuarios" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                    <th>@Html.DisplayNameFor(m => m.Apellido)</th>
                                    <th>@Html.DisplayNameFor(m => m.Direccion)</th>
                                    <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                    <th>@Html.DisplayNameFor(m => m.fechaNacimiento)</th>
                                    <th>@Html.DisplayNameFor(m => m.cedula)</th>
                                    <th>@Html.DisplayNameFor(m => m.Saldo)</th>
                                    <th> Acciones </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Nombre)</td>
                                        <td>@Html.DisplayFor(m => item.Apellido)</td>
                                        <td>@Html.DisplayFor(m => item.Direccion)</td>
                                        <td>@Html.DisplayFor(m => item.Telefono)</td>
                                        <td>@Html.DisplayFor(m => item.fechaNacimiento)</td>
                                        <td>@Html.DisplayFor(m => item.cedula)</td>
                                        <td>@Html.DisplayFor(m => item.Saldo)</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.Id"><i class="fa-solid fa-user-pen"></i>Editar</a>
                                            <a class="btn btn-secondary" asp-action="Detalle" asp-route-id="@item.Id"> <i class="fa-solid fa-circle-info"></i>Detalle</a>
                                            <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.Id"><i class="fa-solid fa-eraser"></i>Borrar</a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No Hay Registros</p>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
